<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="5sp"
    android:background="@color/C5085A5"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:layout_marginBottom="20sp"
            android:text="С возвращением! \nМы скучали! ☺"
            android:textColor="@color/C31708E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:gravity="left"
            android:text="Введите адрес почты:"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/sign_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:hint="Адрес вашей почты"
            android:inputType="textEmailAddress"
            android:textColor="@color/purple_200"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:gravity="left"
            android:text="Введите имя:"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/sign_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:hint="Ваше имя"
            android:inputType="text"
            android:textColor="@color/purple_200"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:gravity="left"
            android:text="Введите пароль:"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/sign_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:layout_marginBottom="15sp"
            android:gravity="center"
            android:hint="Ваш пароль"
            android:inputType="textPassword"
            android:textColor="@color/purple_200"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sign_btn_set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_message_background"
            android:onClick="signClick"
            android:text="Войти"
            android:textColor="@color/CF7F9FB"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>