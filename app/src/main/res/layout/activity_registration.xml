<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnPrimary">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorOnPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_title"
                style="@style/Font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="15sp"
                android:text="Добро пожаловать во FlyChat! Для начала пройдите регистрацию:"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:gravity="left"
                android:text="В нашем приложении мы предлагаем вам регистрацию через электронную почту:"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="17.5sp" />

            <EditText
                android:id="@+id/email"
                style="@style/Font"
                android:layout_width="275sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:hint="Адрес вашей почты"
                android:inputType="textEmailAddress"
                android:textSize="17.5sp" />

            <TextView
                android:id="@+id/tmp_email"
                style="@style/Font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="60sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Адрес вашей почты"
                android:textColor="?attr/colorPrimary"
                android:textSize="17.5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:gravity="left"
                android:text="Введите свои настоящие имя и фамилию через пробел. Зная никнейм, собеседники смогут вас найти:"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="17.5sp" />

            <TextView
                android:id="@+id/red1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:gravity="left"
                android:text="Данные изменить не получится!"
                android:textColor="#F44336"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                style="@style/Font"
                android:layout_width="275sp"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyz_ABCDEFGHIJKLMNOPQRSTUVWXYZ абвгдеёжзийклмнопрстуфхцчшщъыьэюяАБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ"
                android:gravity="center"
                android:hint="Ваше имя и фамилия"
                android:inputType="textPersonName"
                android:textSize="17.5sp" />

            <EditText
                android:id="@+id/nic"
                style="@style/Font"
                android:layout_width="275sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:digits="0123456789.abcdefghijklmnopqrstuvwxyz_ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:gravity="center"
                android:hint="Придумайте никнейм"
                android:inputType="textPersonName"
                android:textSize="17.5sp" />

            <TextView
                android:id="@+id/tmp_name"
                style="@style/Font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="60sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Ваше имя и фамилия"
                android:textColor="?attr/colorPrimary"
                android:textSize="17.5sp" />

            <TextView
                android:id="@+id/tmp_nick"
                style="@style/Font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_marginRight="60sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Придумайте никнейм"
                android:textColor="?attr/colorPrimary"
                android:textSize="17.5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:gravity="left"
                android:text="Придумайте пароль для входа:"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="17.5sp" />

            <TextView
                android:id="@+id/red2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:gravity="left"
                android:text="Не сообщайте пароль никому!"
                android:textColor="#F44336"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/password"
                    style="@style/Font"
                    android:layout_width="235sp"
                    android:layout_height="wrap_content"
                    android:digits="0123456789.abcdefghijklmnopqrstuvwxyz_ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="center"
                    android:hint="Надежный пароль"
                    android:inputType="textPassword"
                    android:textSize="17.5sp" />

                <Button
                    android:id="@+id/btn_view_password"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="7.5sp"
                    android:background="@android:drawable/ic_menu_view" />

            </LinearLayout>

            <TextView
                android:id="@+id/tmp_password"
                style="@style/Font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:text="Надежный пароль"
                android:textColor="?attr/colorPrimary"
                android:textSize="17.5sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                style="@style/style_button"
                android:layout_width="190sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:onClick="confirmClick"
                android:text="получить ссылку"
                android:textColor="@color/white"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/to_sign_in"
                style="@style/style_button"
                android:layout_width="190sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:onClick="click_to_signin"
                android:text="войти в аккаунт"
                android:textColor="@color/white"
                android:textSize="12.5sp" />

            <Button
                android:id="@+id/btn_cancel"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/montserrat_bold"
                android:text="отмена"
                android:textColor="#F44336"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>